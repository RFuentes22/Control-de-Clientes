<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    >


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical"
        android:layout_weight="1"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="@dimen/TextView_height"
            android:text="@string/TextView_Entran"
            android:textSize="@dimen/TextView_TextSize"/>
        <TextView
            android:id="@+id/textEntrar"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/TextView_height"
            android:text="@string/Initial_Count"
            android:textSize="@dimen/TextView_cont_Size"/>
        <Button
            android:id="@+id/entran"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="onClick"
            android:text="@string/Button_text"
            android:background="@color/colorPrimary"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical"
        android:layout_weight="1">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="@dimen/TextView_height"
            android:text="@string/TextView_Salen"
            android:textSize="@dimen/TextView_TextSize"
            />
        <TextView
            android:id="@+id/textSalir"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/TextView_height"
            android:text="@string/Initial_Count"
            android:textSize="@dimen/TextView_cont_Size"/>
        <Button
            android:id="@+id/salen"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="onClick"
            android:text="@string/Button_text"
            android:background="@color/colorPrimary"/>
    </LinearLayout>



</LinearLayout>